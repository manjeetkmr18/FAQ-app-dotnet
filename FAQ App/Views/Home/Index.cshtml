@model List<FAQ_App.Models.DomainModels.FAQ>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

    <div class="list-group">
        @foreach (var faq in Model)
        {
            <div class="list-group-item">
                <h5 class="mb-1">@faq.Question</h5>
                <p class="mb-1">@faq.Answer</p>
                <small>Category: @faq.Category.Name</small>
            </div>
        }
    </div>

    <div class="mt-3">
        <h5>Filter by:</h5>
        <div class="btn-group">
            <a class="btn btn-outline-primary" asp-controller="Home" asp-action="FilterByCategory" asp-route-categoryId="1">Category 1</a>
            <a class="btn btn-outline-primary" asp-controller="Home" asp-action="FilterByCategory" asp-route-categoryId="2">Category 2</a>
        </div>
        <div class="btn-group">
            <a class="btn btn-outline-primary" asp-controller="Home" asp-action="FilterByTopic" asp-route-topicId="1">Topic 1</a>
            <a class="btn btn-outline-primary" asp-controller="Home" asp-action="FilterByTopic" asp-route-topicId="2">Topic 2</a>
        </div>
    </div>
</div>
